---
const links = [
{ href: "/", label: "Domů" },
{ href: "/projekty", label: "Projekty" },
{ href: "/o-mne", label: "O mně" },
{ href: "/kontakt", label: "Kontakt" },
];
---
<header id="header" class="sticky top-0 z-50 transition-all duration-300">
<nav class="container pad-safe flex items-center justify-between h-16">
<a href="/" class="font-display text-xl tracking-tight">JH</a>
<ul class="hidden md:flex items-center gap-6">
{links.map(l => <li><a class="hover:text-mint transition" href={l.href}>{l.label}</a></li>)}
</ul>
<a href="/cv.pdf" class="md:inline-block hidden px-3 py-2 rounded-xl bg-mint text-ink font-medium shadow-soft">CV</a>
</nav>
</header>

<script>
  const header = document.getElementById('header');
  window.addEventListener('scroll', () => {
    if (window.scrollY > 0) {
      header.classList.add('backdrop-blur', 'bg-sky/80', 'border-b', 'border-purple/10');
    } else {
      header.classList.remove('backdrop-blur', 'bg-sky/80', 'border-b', 'border-purple/10');
    }
  });
</script>