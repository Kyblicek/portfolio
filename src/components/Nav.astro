---
const links = [
  { href: "#home", label: "Domů" },
  { href: "#projects", label: "Projekty" },
  { href: "#about", label: "O mně" },
  { href: "#contact", label: "Kontakt" },
];

const base = import.meta.env.BASE_URL ?? "/";

const resolveHref = (href: string) => {
  if (href.startsWith("http")) return href;
  if (href.startsWith("#")) return `${base}${href}`;
  if (href.startsWith("/")) {
    const trimmedBase = base.endsWith("/") ? base.slice(0, -1) : base;
    return `${trimmedBase}${href}`;
  }
  return href;
};
---

<header id="header" class="sticky top-0 z-50 transition-all duration-300 backdrop-glass border-b border-white/10 bg-white/5">
  <nav class="container pad-safe flex items-center justify-center gap-8 h-16">
    <a href={base} class="font-display text-xl tracking-tight text-gradient">JH</a>
    <ul class="hidden md:flex items-center gap-6">
      {links.map((l) => (
        <li>
          <a class="hover:text-mint transition" href={resolveHref(l.href)}>{l.label}</a>
        </li>
      ))}
    </ul>
  </nav>
</header>

