---
const links = [
  { href: "#home", label: "Domů" },
  { href: "#projects", label: "Projekty" },
  { href: "#about", label: "O mně" },
  { href: "#contact", label: "Kontakt" },
];
---

<header id="header" class="sticky top-0 z-50 transition-all duration-300">
  <nav class="container pad-safe flex items-center justify-between h-16">
    <a href="/" class="font-display text-xl tracking-tight text-gradient">JH</a>
    <ul class="hidden md:flex items-center gap-6">
      {links.map((l) => (
        <li>
          <a class="hover:text-mint transition" href={l.href}>{l.label}</a>
        </li>
      ))}
    </ul>
    <a
      href="/cv.pdf"
      class="md:inline-block hidden px-3 py-2 rounded-xl bg-mint text-ink font-medium shadow-glow hover:shadow-glow/90 transition-shadow"
    >
      CV
    </a>
  </nav>
</header>

<script>
  const header = document.getElementById("header");

  const applyScroll = () => {
    const scrolled = window.scrollY > 0;
    header?.classList.toggle("backdrop-glass", scrolled);
    header?.classList.toggle("border-b", scrolled);
    header?.classList.toggle("border-white/10", scrolled);
  };

  window.addEventListener("scroll", applyScroll);
  applyScroll(); // spustí se hned při načtení
</script>
