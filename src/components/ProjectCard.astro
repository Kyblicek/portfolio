---
import type { Project } from "../data/projects";

// props
const { p } = Astro.props as { p: Project };

// respektuje astro.config.base i subpath nasazení (Cloudflare Pages apod.)
const base = import.meta.env.BASE_URL;

// bezpečné atributy pro odkaz jen když je url
const target = p.url ? "_blank" : undefined;
const rel = p.url ? "noopener" : undefined;

// u cover očekáváme relativní cestu vůči /public (např. "img/rr-cover.png")
const coverSrc = p.cover ? `${base}${p.cover}` : null;
---

<a
  href={p.url ?? "#"}
  target={target}
  rel={rel}
  class="group block rounded-2xl gradient-border hover:shadow-glow hover:-translate-y-1 transition overflow-hidden bg-white/5 backdrop-blur-sm"
>
  {coverSrc ? (
    <img
      src={coverSrc}
      alt={p.title}
      class="aspect-[16/9] object-cover w-full"
      loading="lazy"
      decoding="async"
    />
  ) : (
    <div class="aspect-[16/9] w-full bg-white/5" />
  )}

  <div class="p-5">
    <div class="flex items-center justify-between mb-1">
      <h3 class="font-display text-xl group-hover:text-mint transition">{p.title}</h3>
      <span class="text-sm opacity-60">{p.year}</span>
    </div>

    <p class="text-white/75">{p.summary}</p>

    <div class="mt-3 flex flex-wrap gap-2 text-sm opacity-80">
      {p.stack.map((s) => (
        <span class="px-2 py-1 rounded-lg bg-white/10 text-white/85">{s}</span>
      ))}
    </div>
  </div>
</a>
