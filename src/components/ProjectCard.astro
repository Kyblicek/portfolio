import type { Project } from "../data/projects";

const { p } = Astro.props as { p: Project };
---

<a href={`/projekty/${p.slug}`} class="group block rounded-2xl border border-purple/10 hover:border-purple/40 transition overflow-hidden">
  {p.cover && <img src={p.cover} alt={p.title} class="aspect-[16/9] object-cover" />}
  <div class="p-5">
    <div class="flex items-center justify-between mb-1">
      <h3 class="font-display text-xl group-hover:text-purple transition">{p.title}</h3>
      <span class="text-sm opacity-60">{p.year}</span>
    </div>

    <p class="text-black/70">{p.summary}</p>

    <div class="mt-3 flex flex-wrap gap-2 text-sm opacity-80">
      {p.stack.map((s: string) => (
        <span class="px-2 py-1 rounded-lg bg-sky/40">{s}</span>
      ))}
    </div>
  </div>
</a>
